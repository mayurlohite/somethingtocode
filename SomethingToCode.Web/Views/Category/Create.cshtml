@model SomethingToCode.Web.Models.Masters.Category.CategoryModel
@using SomethingToCode.Web.Helpers;
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<section class="content-header">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Category</h3>
        </div>
        <div class="col-md-6 pull-left">
            @Html.ActionLink("Back To Categories", "Index", "Category", null, new { @role = "Button", @class = "btn btn-primary pull-right" })
        </div>
    </div>
</section>



<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

           @Html.Raw(TempData["message"])

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Please enter below details,</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="form-group">

                                <label for="inputEmail3">Category @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "validationMessage" })</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3">Discription @Html.ValidationMessageFor(x => x.Description, null, new { @class = "validationMessage" })</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="inputPassword3">Picture @Html.ValidationMessageFor(x => x.HttpCategryImage, null, new { @class = "validationMessage" })</label>
                                @Html.TextBoxFor(x => x.HttpCategryImage, new { @class = "form-control", @type = "file" })
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3">Is Enabled?</label>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(x => x.IsEnable)
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <div class="form-group">
                            <div class="col-sm-offset-5">
                                <button type="submit" class="btn btn-success">Save</button>
                                @Html.ActionLink("Cancel", "Index", "Category", null, new { @role = "Button", @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div><!-- /.box-footer -->
                }

                
            </div><!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->

